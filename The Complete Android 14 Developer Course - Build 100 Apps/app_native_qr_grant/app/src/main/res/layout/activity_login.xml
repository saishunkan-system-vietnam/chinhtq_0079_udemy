<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="130dp"
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/logo_round"
            android:layout_gravity="center_horizontal"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_label_primary"
            style="@style/StyleRegular"
            android:includeFontPadding="true"
            android:text="QR補助金申請App"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:layout_marginBottom="70dp"
            tools:ignore="HardcodedText" />

        <com.example.app_native_qr_grant.widgets.custom_button.PrimaryButton
            android:id="@+id/btn_login_account"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="ポータルアカウントでログイン"
            style="@style/StyleBold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="5dp"
            tools:ignore="HardcodedText" />

        <com.example.app_native_qr_grant.widgets.custom_button.PrimaryButton
            android:id="@+id/btn_login_qr"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="ログインQRコードでログイン"
            style="@style/StyleBold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:elevation="5dp"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StyleMedium"
            android:paddingHorizontal="10dp"
            android:text="@string/label_1"
            android:textColor="@color/linkColor"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</ScrollView>